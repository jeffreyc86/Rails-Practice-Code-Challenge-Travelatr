<h1> Make a new Blogger!</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |message| %>
  <p> <%= message %></p>
  <% end %>
<% end %>

<%= form_for @blogger do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
   <%=  f.label :age %>
   <%=  f.number_field :age %>
    <br>
    <%= f.label :bio, "Personal Bio" %>
    <%= f.text_area :bio %>

   <%=  f.submit %>
   <% end %>